<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#fef5c7">

    <TableLayout
        android:id="@+id/tbl_test"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:orientation="vertical"
        android:layout_marginTop="106dp"
        android:stretchColumns="2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow android:background="#ffffff" android:layout_margin="1dp">

            <TextView android:text="Name" android:layout_column="0"
                android:width="50dp" />
            <TextView android:text="Date" android:layout_column="1"
                android:width="70dp"
                android:textAlignment="center" />
            <TextView android:text="no" android:layout_column="2"
                android:textAlignment="center"
                android:width="30dp" />
            <TextView android:text="remove" android:layout_column="4" />

        </TableRow>

        <TableRow
            android:background="#ffffff"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp">

            <TextView android:text="r1" android:layout_column="0"
                android:textAlignment="center" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/editText5"
                android:layout_column="1"
                android:width="10dp" />

            <TextView android:text="" android:layout_column="3" />
            <Button android:text="delete"
                android:layout_column="4" />

        </TableRow>

        <TableRow
            android:background="#ffffff"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:paddingRight="2dp">

            <TextView android:text="r2" android:layout_column="0"
                android:textAlignment="center" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/editText10"
                android:layout_column="1"
                android:width="10dp" />

            <TextView android:text="" android:layout_column="3" />

            <Button android:text="delete"
                android:layout_column="4" />

        </TableRow>

        <TableRow
            android:background="#ffffff"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:paddingRight="3dp">

            <TextView android:text="r3" android:layout_column="0"
                android:textAlignment="center" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/editText11"
                android:layout_column="1"
                android:width="10dp" />

            <TextView android:text="" android:layout_column="3" />
            <Button android:text="delete"
                android:layout_column="4" />

        </TableRow>

        <TableRow
            android:background="#ffffff"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:paddingRight="4dp">

            <TextView android:text="r4" android:layout_column="0"
                android:textAlignment="center" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/editText12"
                android:layout_column="1"
                android:width="10dp" />

            <TextView android:text="" android:layout_column="3" />
            <Button android:text="delete"
                android:layout_column="4" />

        </TableRow>

    </TableLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText13"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="Welcome to your invite logs" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/imageButton"
        android:layout_below="@+id/tbl_test"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="confirm" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton3"
        android:layout_below="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Add new visitor" />

</RelativeLayout>